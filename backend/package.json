{
    "name": "backend",
    "version": "1.0.0",
    "description": "",
    "author": "",
    "license": "ISC",
    "keywords": [],
    "main": "index.js",
    "scripts": {
        "lint": "eslint .",
        "lint:fix": "eslint --fix",
        "dev": "tsx --watch src/index.ts",
        "prod": "node dist/src/index.js",
        "build": "tsc && tsc-alias",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "cross-env DB_MIGRATING=true tsx src/db/migrate.ts",
        "init-prod": "npm install --legacy-peer-dep && npm run db:migrate && npm run build && pm2 start npm --name 'fundio-backend' -- run 'prod'",
        "prepare": "husky"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "compression": "^1.8.0",
        "cors": "^2.8.5",
        "dotenv": "^16.5.0",
        "dotenv-expand": "^12.0.2",
        "drizzle-orm": "^0.44.2",
        "express": "^5.1.0",
        "express-jwt": "^8.5.1",
        "http-status": "^2.1.0",
        "jsonwebtoken": "^9.0.2",
        "pg": "^8.16.1",
        "pino": "^9.7.0",
        "pino-http": "^10.5.0",
        "postgres": "^3.4.7",
        "zod": "^3.25.67"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^4.15.0",
        "@types/compression": "^1.8.1",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.3",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/pg": "^8.15.4",
        "cross-env": "^7.0.3",
        "drizzle-kit": "^0.31.1",
        "eslint": "^9.29.0",
        "eslint-plugin-format": "^1.0.1",
        "husky": "^9.1.7",
        "lint-staged": "^16.1.2",
        "pino-pretty": "^13.0.0",
        "tsc-alias": "^1.8.16",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3"
    },
    "pnpm": {
        "ignoredBuiltDependencies": [
            "esbuild"
        ]
    },
    "lint-staged": {
        "*": "pnpm lint"
    }
}
