{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",
        "paths": {
            "@/*": ["./src/*"],
            "$/*": ["./*"]
        },
        "resolveJsonModule": true,
        "strict": true,
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    },
    "moduleResolution": "node16"
}
